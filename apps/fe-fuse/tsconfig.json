    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "declaration": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
