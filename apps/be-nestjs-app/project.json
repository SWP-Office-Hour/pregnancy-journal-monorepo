{
  "name": "be-nestjs-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/be-nestjs-app/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "secrets": {
      "executor": "nx:run-commands",
      "options": {
        "command": "doppler secrets download --no-file --format env > .env"
      }
    },
    "prisma": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx prisma generate"
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "dependsOn": ["build"],
      "options": {
        "engine": "docker",
        "push": true,
        "defaultRegistry": "registry.digitalocean.com/office-hour/",
        "tags": ["registry.digitalocean.com/office-hour/api:latest"],
        "cache-from": "type=registry,ref=registry.digitalocean.com/office-hour/cache:buildcache",
        "cache-to": "type=registry,ref=registry.digitalocean.com/office-hour/cache:buildcache,modes=max"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "cache": true,
      "dependsOn": ["prisma"],
      "options": {
        "command": "webpack-cli build",
        "args": ["node-env=production"]
      },
      "configurations": {
        "development": {
          "args": ["node-env=development | doppler secrets download --no-file --format env > .env"]
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "be-nestjs-app:build",
        "runBuildTargetDependencies": true
      },
      "configurations": {
        "development": {
          "buildTarget": "be-nestjs-app:build:development"
        },
        "production": {
          "buildTarget": "be-nestjs-app:build:production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    }
  }
}
