{
  "name": "be-nestjs-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/be-nestjs-app/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "secrets": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "production",
      "configurations": {
        "development": {
          "command": "doppler secrets download --config dev --no-file --format env > .env.development"
        },
        "production": {
          "command": "echo Doppler inject to production"
        }
      }
    },
    "prisma": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "production",
      "dependsOn": ["^secrets"],
      "configurations": {
        "development": {
          "command": "npx prisma generate"
        },
        "production": {
          "command": "npx prisma generate"
        }
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "dependsOn": ["build:production"],
      "options": {
        "engine": "docker",
        "push": true,
        "defaultRegistry": "registry.digitalocean.com/office-hour/",
        "tags": ["registry.digitalocean.com/office-hour/api:latest"],
        "cache-from": "type=registry,ref=registry.digitalocean.com/office-hour/cache:buildcache",
        "cache-to": "type=registry,ref=registry.digitalocean.com/office-hour/cache:buildcache,modes=max"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "production",
      "cache": true,
      "dependsOn": ["^prisma"],
      "options": {
        "command": "webpack-cli build"
      },
      "configurations": {
        "production": {
          "args": ["node-env=production"]
        },
        "development": {
          "args": ["node-env=development"],
          "envFile": ".env.development"
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["^build"],
      "options": {
        "buildTarget": "be-nestjs-app:build",
        "runBuildTargetDependencies": true
      },
      "configurations": {
        "development": {
          "buildTarget": "be-nestjs-app:build:development"
        },
        "production": {
          "buildTarget": "be-nestjs-app:build:production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    }
  }
}
